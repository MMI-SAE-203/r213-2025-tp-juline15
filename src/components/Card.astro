---
const { ...offre } = Astro.props;
console.log(offre);
---

<div class="grid grid-colls-2 justify-center items-center rounded-lg pb-6 px-6">
    <div class="p-6 flex flex-col bg-white rounded-lg shadow-lg">
        <h3 class="font-semibold text-2xl text-purple-900">
            {offre.nomMaison}
        </h3>
        <p class="text-black"><strong>Adresse : </strong>{offre.adresse}</p>
        <p class="text-black"><strong>Prix : </strong>{offre.prix} €</p>
        <p class="text-black"><strong>Surface : </strong>{offre.surface} m²</p>
        <p class="text-black">
            <strong>Nombre de chambres : </strong> {offre.nbChambres} chambres
        </p>
        <p class="text-black">
            <strong>Nombre de salles de bain : </strong>{offre.nbSdb} salles de bain
        </p>
        {
            offre.favori ? (
                <p class="text-red-500 font-bold">♥ Favori</p>
            ) : (
                <p class="text-red-500 font-bold">♡ Non Favori</p>
            )
        }
    </div>
</div>
